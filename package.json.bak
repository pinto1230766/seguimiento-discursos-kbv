{
  "name": "seguimiento-discursos-kbv",
  "private": true,
  "version": "1.0.0",
  "description": "Application PWA pour gérer les visites d'orateurs capverdiens à Lyon",
  "author": "Francisco Pinto",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "apk:build": "npm run build && npx cap copy android && npx cap sync android"
  },
  "main": "electron-main.js",
  "homepage": "./",
  "dependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "date-fns": "^3.6.0",
    "dexie": "^4.0.0",
    "i18next": "^23.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.0",
    "react-router-dom": "^6.22.3",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.4",
    "electron-builder": "^24.13.3",
    "vite": "^5.1.4",
    "vite-plugin-pwa": "^1.0.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.franciscopinto.seguimiento.discursos.kbv",
    "productName": "Seguimiento Discursos KBV",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/pwa-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
